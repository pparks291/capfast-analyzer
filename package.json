{
    "name": "capfast-analyzer",
    "version": "1.0.0",
    "description": "A tool for analyzing CAPFAST files",
    "author": {
        "name": "Patrick Parks",
        "email": "patrick.parks@example.com"
    },
    "homepage": "https://github.com/patrickparks/capFastAnalyzer",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder build --config.asar=true",
        "build:linux": "electron-builder build --linux --config.asar=true",
        "build:mac": "electron-builder build --mac --config.asar=true",
        "build:win": "electron-builder build --win --config.asar=true"
    },
    "dependencies": {
        "binary-parser": "^2.2.1",
        "chart.js": "^3.9.1",
        "chartjs-adapter-moment": "^1.0.1",
        "moment-timezone": "^0.5.47"
    },
    "devDependencies": {
        "electron": "^28.1.0",
        "electron-builder": "^24.9.1"
    },
    "build": {
        "appId": "com.capfast.analyzer",
        "productName": "CapFast Analyzer",
        "directories": {
            "output": "dist"
        },
        "files": [
            "**/*",
            "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
            "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
            "!**/node_modules/*.d.ts",
            "!**/node_modules/.bin",
            "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
            "!.editorconfig",
            "!**/._*",
            "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
            "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
            "!**/{appveyor.yml,.travis.yml,circle.yml}",
            "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
        ],
        "mac": {
            "target": [
                "dmg"
            ],
            "category": "public.app-category.utilities"
        },
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "build/icon.ico"
        },
        "linux": {
            "target": [
                "AppImage"
            ],
            "category": "Utility",
            "executableName": "capfast-analyzer",
            "artifactName": "${productName}-${version}.${ext}",
            "desktop": {
                "Name": "CapFast Analyzer",
                "Comment": "CAPFAST file analyzer",
                "Categories": "Utility;",
                "SingleMainWindow": "true",
                "StartupNotify": "true"
            }
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        },
        "extraResources": [
            {
                "from": "build/",
                "to": "build",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "extraMetadata": {
            "main": "main.js"
        },
        "compression": "maximum",
        "asar": true,
        "asarUnpack": [
            "node_modules/binary-parser/**/*"
        ],
        "electronDownload": {
            "arch": "x64"
        }
    }
}